<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:UIControls="clr-namespace:Tatbikat.UI.Controls" NavigationPage.HasNavigationBar="False" xmlns:vm="clr-namespace:Tatbikat.ViewModels" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tatbikat.Views.AddAppScreen">
    <ContentPage.BindingContext>
        <vm:AddAppScreenViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource BackgroundColor}" Style="{StaticResource iOSPagePadding}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <UIControls:AppBar Grid.Row="0" VerticalOptions="Center" OnBackPressedCommand="{Binding BackCommand}" PageTitleText="اضافة تطبيق" />
            <Grid Grid.Row="1" RowSpacing="15" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
            <!-- Add IOS App-->
                <UIControls:SAFrame  CornerRadius="5" Grid.Row="0"
                            ShadowOpacity="1"
                            BorderColor="Silver"
                            BorderWidth="2"
                            VerticalOptions="Fill"
                            OutlineColor="Silver"
                            BackgroundColor="{StaticResource BackgroundColor}"
                            Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                         <BoxView BackgroundColor="{StaticResource LightSilverColor}" Grid.RowSpan="3"/>
                        
                        <Label Margin="0,5" VerticalTextAlignment="Center" Grid.Row="0" TextColor="{StaticResource IdentityColor}" FontAttributes="Bold" FontSize="Medium" Text="ابحث عن التطبيق" HorizontalTextAlignment="Center"/>
                       
                        <Grid Grid.Row="1" Margin="20,5,20,10">
                        <UIControls:SABoxView HorizontalOptions="FillAndExpand"
                                                          VerticalOptions="FillAndExpand"
                                                          CornerRadius="4"
                                                          BackgroundColor="{StaticResource SilverColor}" />

                        <Grid Margin="3">
                                  <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions> 
                                <Image Grid.Column="0" HorizontalOptions="Start" WidthRequest="20" HeightRequest="20" Source="plusicon.png" />
                                <Label   VerticalTextAlignment="Center" HorizontalTextAlignment="End" Text="{Binding AppSearchiOSText}" BackgroundColor="White" TextColor="{StaticResource SilverColor}" Grid.Column="1"/>
                                <Image WidthRequest="20" HeightRequest="20" Source="appleicon.png" Grid.Column="2"/>
                        </Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AddiOSAppCommand}"/>
                            </Grid.GestureRecognizers>
                       </Grid>
                      
                        <Grid Grid.Row="2" Margin="20,5,20,10">
                            <UIControls:SABoxView HorizontalOptions="FillAndExpand"
                                                          VerticalOptions="FillAndExpand"
                                                          CornerRadius="4"
                                                          BackgroundColor="{StaticResource SilverColor}" />

                            <Grid Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"  HorizontalOptions="Start" WidthRequest="20" HeightRequest="20" Source="plusicon.png"/>
                                <Label Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="End" Text="{Binding AppSearchAndroidText}" BackgroundColor="White" TextColor="{StaticResource SilverColor}"/>
                                <Image Grid.Column="2" WidthRequest="20" HeightRequest="20" Source="androidicon.png"/>
                            </Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AddAndroidAppCommand}"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </Grid>
                </UIControls:SAFrame>

