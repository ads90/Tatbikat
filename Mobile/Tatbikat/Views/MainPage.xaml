<?xml version="1.0" encoding="utf-8"?>
<ContentPage NavigationPage.HasNavigationBar="False" Title="تطبيقات" xmlns:vm="clr-namespace:Tatbikat.ViewModels" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Tatbikat" x:Class="Tatbikat.MainPage" xmlns:UIControls="clr-namespace:Tatbikat.UI.Controls">
    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource BackgroundColor}" Style="{StaticResource iOSPagePadding}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <UIControls:AppBar OnCategoryPressedCommand="{Binding SelectCategoriesCommand}" IsCategoryIconVisible="true"  IsAddIconVisible="true" OnAddPressedCommand="{Binding AddAppCommand}" Grid.Row="0" VerticalOptions="Center" IsBackIconVisible="false" PageTitleText="تطبيقات" />
            <Grid Grid.Row="1" RowSpacing="0">
                <ListView HasUnevenRows="true" ItemsSource="{Binding Apps}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Margin="5" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid HorizontalOptions="End" Grid.Column="0"  RowSpacing="0" VerticalOptions="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" FontSize="Medium" HorizontalTextAlignment="End" Text="{Binding Name}"  LineBreakMode="TailTruncation"/>
                                        <!--Category-->
                                        <UIControls:SAStackLayout ItemsSource="{Binding AppCategories}" Grid.Row="1" Orientation="Horizontal">
                                            <UIControls:SAStackLayout.ItemContent>
                                                <DataTemplate>
                                                    <Grid HorizontalOptions="End" >
                                                        <UIControls:SABoxView HeightRequest="10" InputTransparent="True"  CornerRadius="25" BackgroundColor="{StaticResource IdentityColor}"/>
                                                        <UIControls:SABoxView HeightRequest="10" InputTransparent="True" Margin="1" CornerRadius="25" BackgroundColor="White"/>
                                                        <Label  FontSize="Small"  Margin="0" Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{StaticResource IdentityColor}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </UIControls:SAStackLayout.ItemContent>
                                        </UIControls:SAStackLayout>
                                    </Grid>
                                    <!--<Grid Grid.Column="1" VerticalOptions="Center">
                                        <UIControls:SABoxView WidthRequest="50"  CornerRadius="10" BackgroundColor="{StaticResource SilverColor}"/>
                                        <UIControls:SABoxView WidthRequest="50"  CornerRadius="10" BackgroundColor="White" Margin="1"/>
                                        <Image WidthRequest="50" HeightRequest="50" Margin="1"  VerticalOptions="Center" HorizontalOptions="Center" Source="{Binding ImageSource}" />
                                    </Grid>-->
                                    <Frame Margin="0"  VerticalOptions="Center" HorizontalOptions="Center"   WidthRequest="50" HeightRequest="50" Grid.Column="1" HasShadow="True" OutlineColor="Black" CornerRadius="10" Padding="0">
                                        <Image VerticalOptions="Center" HorizontalOptions="Center" Source="{Binding ImageSource}" />
                                    </Frame>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>