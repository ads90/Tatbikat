<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tatbikat.App">
    <Application.Resources>
        <!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="BackgroundColor">#fefefe</Color>
            <!--Give 20 padding for android to fix the tabbed page rederer navigation-->
            <OnPlatform x:Key="PlatformPaddingConfig" x:TypeArguments="Thickness" Android="0,0,0,0" iOS="0,20,0,0" />
            <Style x:Key="iOSPagePadding" TargetType="Grid">
                <Setter Property="Padding" Value="{StaticResource PlatformPaddingConfig}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>